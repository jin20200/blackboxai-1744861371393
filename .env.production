# Application
NODE_ENV=production
PORT=3000
JWT_SECRET=change-this-to-a-secure-secret-in-production
JWT_EXPIRATION=24h

# MongoDB
MONGO_URI=mongodb://mongodb:27017/event-manager
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=change-this-to-a-secure-password
MONGO_APP_USER=event_manager_app
MONGO_APP_PASSWORD=change-this-to-a-secure-password

# Nginx
NGINX_HOST=your-domain.com
NGINX_PORT=443

# SSL/TLS
SSL_EMAIL=your-email@domain.com

# Rate Limiting
API_RATE_LIMIT=100
API_RATE_WINDOW=15m

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Security
CORS_ORIGIN=https://your-domain.com
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# Backup
BACKUP_ENABLED=true
BACKUP_CRON=0 0 * * *
BACKUP_RETENTION_DAYS=7

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Cache
REDIS_ENABLED=false
REDIS_URL=redis://redis:6379

# Email (optional)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@your-domain.com

# Remember to:
# 1. Change all default passwords and secrets
# 2. Use strong, unique values for all credentials
# 3. Keep this file secure and never commit to version control
# 4. Consider using a secrets management service in production
